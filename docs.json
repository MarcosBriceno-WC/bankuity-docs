{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Bankuity Docs",
  "colors": {
    "primary": "#264EDC",
    "light": "#42DFDC",
    "dark": "#264EDC"
  },
  "favicon": "/bankuity-favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Home",
        "icon": "house",
        "pages": ["index"]
      },
      {
        "tab": "Guides",
        "icon": "book",
        "groups": [
          {
            "group": "Introduction",
            "pages": ["guides/overview"]
          },
          {
            "group": "Get Started",
            "pages": ["guides/generate-analysis", "guides/retrieve-results"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "icon": "code",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication",
              "api-reference/response-codes"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              {
                "group": "Authentication",
                "openapi": "openapi.json",
                "pages": [
                  "POST /Auth/GetJWTToken",
                  "POST /api/GetUnitConfigurations",
                  "GET /api/Ping"
                ]
              },
              {
                "group": "Analysis Services",
                "openapi": "openapi.json",
                "pages": [
                  "POST /v2/analysis/insights",
                  "POST /v2/analysis/bankinfo/check",
                  "GET /v2/analysis/income",
                  "GET /v2/analysis/income/customer"
                ]
              },
              {
                "group": "Transaction Intelligence",
                "openapi": "openapi.json",
                "pages": [
                  "GET /v2/analysis/income/result",
                  "POST /v2/analysis/income/search",
                  "POST /v2/analysis/income/chirpreports",
                  "POST /api/GetTransactions",
                  "POST /api/GetTransactionsForRequestCode"
                ]
              },
              {
                "group": "Connection Management",
                "openapi": "openapi.json",
                "pages": [
                  "GET /v2/connections/status",
                  "POST /v2/connections/refresh"
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/dark.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {},
  "background": {
    "color": {
      "dark": "#11132D"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  }
